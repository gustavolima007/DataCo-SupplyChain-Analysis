	partition Dim_Calendario = calculated
		mode: import
		source =
				
				VAR DataInicial = DATE(2014, 01, 01) -- Ajuste conforme seu dataset (DataCo começa por volta de 2015)
				VAR DataFinal = DATE(2020, 01, 01)   -- Ajuste para o fim do seu dataset
				RETURN
				ADDCOLUMNS (
				    CALENDAR (DataInicial, DataFinal),
				    "Ano", YEAR ( [Date] ),
				    "Mês Num", MONTH ( [Date] ),
				    "Mês Nome", FORMAT ( [Date], "MMMM", "pt-BR" ),
				    "Mês Abrev", UPPER( FORMAT ( [Date], "MMM", "pt-BR" ) ),
				    "Mês/Ano", FORMAT ( [Date], "MM/yyyy" ),
				    "Mês/Ano Sort", YEAR ( [Date] ) * 100 + MONTH ( [Date] ),
				    "Trimestre", "T" & QUARTER ( [Date] ),
				    "Trimestre/Ano", QUARTER ( [Date] ) & "º Trim " & YEAR ( [Date] ),
				    "Semana Num", WEEKNUM ( [Date], 2 ),
				    "Dia da Semana", FORMAT ( [Date], "dddd", "pt-BR" ),
				    "Dia Semana Num", WEEKDAY ( [Date], 2 ), -- 1 = Segunda
				    "Semestre", IF(MONTH([Date]) <= 6, "1º Sem", "2º Sem"),
				    "Ano/Mês", FORMAT([Date], "YYYY/MM")
				)

